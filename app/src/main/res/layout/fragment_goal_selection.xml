<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goal_selection_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GoalSelectionFragment">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/goal_selection_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="Let's get started by adding some goals"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Steps CardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/step_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/goal_selection_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/step_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_step_goal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/step_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Steps"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    app:layout_constraintStart_toEndOf="@id/step_icon"
                    app:layout_constraintEnd_toStartOf="@+id/step_slider"
                    app:layout_constraintTop_toTopOf="@id/step_icon"
                    app:layout_constraintBottom_toBottomOf="@id/step_icon" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/step_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="10000"
                    android:stepSize="100"
                    app:layout_constraintStart_toEndOf="@id/step_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Repeat this MaterialCardView for each goal type (water, sleep, exercise) -->
        <!-- Water Intake CardView -->
        <!-- ... -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/water_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/step_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/water_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_water_glass"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/water_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Glasses of water"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    app:layout_constraintStart_toEndOf="@id/water_icon"
                    app:layout_constraintEnd_toStartOf="@+id/water_slider"
                    app:layout_constraintTop_toTopOf="@id/water_icon"
                    app:layout_constraintBottom_toBottomOf="@id/water_icon" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/water_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="20"
                    android:stepSize="1"
                    app:layout_constraintStart_toEndOf="@id/water_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sleep Duration CardView -->
        <!-- ... -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sleep_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/water_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/sleep_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_sleep_goal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/sleep_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hours of sleep"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    app:layout_constraintStart_toEndOf="@id/sleep_icon"
                    app:layout_constraintEnd_toStartOf="@+id/sleep_slider"
                    app:layout_constraintTop_toTopOf="@id/sleep_icon"
                    app:layout_constraintBottom_toBottomOf="@id/sleep_icon" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sleep_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="24"
                    android:stepSize="0.5"
                    app:layout_constraintStart_toEndOf="@id/sleep_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Exercise CardView -->
        <!-- ... -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exercise_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/sleep_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/exercise_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_exercise_goal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/exercise_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Minutes of exercise"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    app:layout_constraintStart_toEndOf="@id/exercise_icon"
                    app:layout_constraintEnd_toStartOf="@+id/exercise_slider"
                    app:layout_constraintTop_toTopOf="@id/exercise_icon"
                    app:layout_constraintBottom_toBottomOf="@id/exercise_icon" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/exercise_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="120"
                    android:stepSize="5"
                    app:layout_constraintStart_toEndOf="@id/exercise_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- Submit Button -->
        <Button
            android:id="@+id/goal_selection_done_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:text="All Set"
            android:drawableEnd="@drawable/fui_ic_check_circle_black_128dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

