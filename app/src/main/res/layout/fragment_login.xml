<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hello_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context="com.apptimistiq.android.fitstreak.authentication.onboarding.LoginFragment">

    <!-- Image with improved layout and scale type -->
    <ImageView
        android:id="@+id/app_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_logo_img_desc"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/hello_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/asu_pitchforks" />

    <!-- Material Button with custom style -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/hello_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/login_enter_button"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_icon_image" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </layout>
